<%= scrivito_details_for t('scrivito_timeline_widget.details.type', default: 'Type') do %>
  <%= scrivito_toggle_button_editor widget, :type %>
<% end %>

<%= scrivito_details_for t('scrivito_timeline_widget.details.tweet_id', default: 'Id for tweet') do %>
  <%= scrivito_tag :div, widget, :tweet_id %>
<% end %>

<div class="alert alert-info">
  <a href="https://twitter.com/settings/widgets/new" target="_blank">
    <%= t('scrivito_timeline_widget.details.create', default: 'Create a new Timline.') %>
  </a>
</div>
